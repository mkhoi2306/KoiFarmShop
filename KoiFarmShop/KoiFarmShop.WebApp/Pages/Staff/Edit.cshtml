@page
@model KoiFarmShop.WebApp.Pages.Staff.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit KoiFish</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="koiName">Koi Fish Name</label>
                <input type="text" id="koiName" name="KoiFish.Name" class="form-control" value="@Model.KoiFish.Name" required />
            </div>

            <!-- Category -->
            <div class="form-group">
                <label for="categoryId">Category</label>
                <select id="categoryId" name="KoiFish.CategoryId" class="form-control" required>
                    <option value="">Select Category</option>
                    @foreach (var category in ViewData["CategoryId"] as IEnumerable<SelectListItem>)
                    {
                    <option value="@category.Value">@category.Text</option>
                    }
                </select>
            </div>
            
             <!-- Size -->
            <div class="form-group">
                <label for="sizeId">Size</label>
                <select id="sizeId" name="KoiFish.SizeId" class="form-control" required>
                    <option value="">Select Size</option>
                    @foreach (var size in ViewData["SizeId"] as IEnumerable<SelectListItem>)
                    {
                        <option value="@size.Value">@size.Text</option>
                    }
                </select>
            </div>

            <!-- Description -->
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="KoiFish.Description" class="form-control" required>@Model.KoiFish.Description</textarea>
            </div>

            <!-- Date of Birth -->
            <div class="form-group">
                <label for="dob">Date of Birth</label>
                <input type="date" id="dob" name="KoiFish.Dob" class="form-control" value="@Model.KoiFish.Dob?.ToString("yyyy-MM-dd")" />
            </div>

            <!-- Price -->
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" id="price" name="KoiFish.Price" class="form-control" value="@Model.KoiFish.Price" step="0.01" />
            </div>

            <label for="statusConsignment" class="form-label me-2 mb-0">Type:</label>
            <select name="statusConsignment" id="statusConsignment" class="form-select w-auto me-2">
                <option value="ALL">Tất cả</option>
                <option value="PENDING">Kohaku</option>
                <option value="REJECTED">Sanke</option>
                <option value="APPROVED">Showa</option>
                <option value="CONFIRMED">Ogon</option>
                <option value="CANCELLED">Chagoi</option>
            </select>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            
            
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

