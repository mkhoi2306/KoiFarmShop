@page
@model KoiFarmShop.WebApp.Pages.Staff.CreateModel

@{
	ViewData["Title"] = "Create";
	Layout = "~/Pages/Shared/_StaffLayout.cshtml";
}
<h4>Create KoiFish</h4>
<hr />
<div class="row">
	<div class="col-md-8 offset-md-2">
		<form method="post" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group mb-3">
				<label for="koiName" class="form-label">Koi Fish Name</label>
				<input type="text" asp-for="koiFish.Name" id="koiName" class="form-control" required />
			</div>

			<div class="form-group mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea id="description" asp-for="koiFish.Description" class="form-control" rows="4" required></textarea>
			</div>

			<div class="form-group mb-3">
				<label for="dob" class="form-label">Date of Birth</label>
				<input type="date" asp-for="koiFish.Dob" id="dob" class="form-control" />
			</div>

			<div class="form-group mb-3">
				<label for="price" class="form-label">Price</label>
				<input type="number" asp-for="koiFish.Price" id="price" class="form-control" step="0.01" />
			</div>

			<div class="form-group mb-3">
				<label for="koiImage" class="form-label">Koi Image</label>
				<input type="file" asp-for="KoiImage" id="koiImage" class="form-control" />
			</div>

			<div class="form-group mb-3">
				<label for="gender" class="form-label">Gender:</label>
				<select name="gender" id="gender" class="form-select">
					<option value="ALL">All</option>
					<option value="Male">Male</option>
					<option value="Female">Female</option>
				</select>
			</div>

			<div class="form-group mb-3">
				<label for="type" class="form-label">Type:</label>
				<select name="type" id="type" class="form-select">
					<option value="ALL">All</option>
					<option value="Kohaku">Kohaku</option>
					<option value="Sanke">Sanke</option>
					<option value="Showa">Showa</option>
					<option value="Ogon">Ogon</option>
					<option value="Chagoi">Chagoi</option>
				</select>
			</div>

			<div class="form-group text-center mb-3">
				<input type="submit" value="Create" class="btn btn-primary btn-lg" />
			</div>
		</form>
	</div>
</div>

<div class="text-center mt-4">
	<a asp-page="Index" class="btn btn-outline-secondary">Back to List</a>
</div>
