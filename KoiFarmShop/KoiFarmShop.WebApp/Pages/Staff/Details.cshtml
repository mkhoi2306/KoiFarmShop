@page
@model KoiFarmShop.WebApp.Pages.Staff.DetailsModel

@{
ViewData["Title"] = "Details";
}

<!-- Page Heading -->
<h1 class="text-center mb-3">Details</h1>
<h4 class="text-center mb-4">KoiFish</h4>

<div class="container mt-5">
    <div class="d-flex mx-100 justify-content-center pb-5">
        <div class="d-flex flex-column justify-content-center mw-100 align-self-center detailData">
            <!-- Display KoiFish details in a formatted layout -->
            <div class="row">
                <div class="col-6 title">Name</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Name)</div>
            </div>
            <div class="row">
                <div class="col-6 title">Description</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Description)</div>
            </div>
            <div class="row">
                <div class="col-6 title">Dob</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Dob)</div>
            </div>
            <div class="row">
                <div class="col-6 title">Price</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Price)</div>
            </div>
            <div class="row">
                <div class="col-6 title">Origin</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Origin)</div>
            </div>
            <div class="row">
                <div class="col-6 title">Gender</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Gender)</div>
            </div>
            <div class="row">
                <div class="col-6 title">CreatedBy</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.CreatedBy)</div>
            </div>
            <div class="row">
                <div class="col-6 title">CreateDate</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.CreateDate)</div>
            </div>
            <div class="row">
                <div class="col-6 title">UpdateDate</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.UpdateDate)</div>
            </div>
            <div class="row">
                <div class="col-6 title">IsDeleted</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.IsDeleted)</div>
            </div>
            <div class="row">
                <div class="col-6 title">Category</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Category.CategoryId)</div>
            </div>
            <div class="row">
                <div class="col-6 title">Size</div>
                <div class="col-6 value">@Html.DisplayFor(model => model.KoiFish.Size.SizeId)</div>
            </div>

            <!-- Edit and Back buttons -->
            <div class="footer-links d-flex justify-content-between pt-4">
                <a asp-page="./Edit" asp-route-id="@Model.KoiFish.KoiFishId" class="btn btn-primary btn-sm px-4">Edit</a>
                <a asp-page="./Index" class="btn btn-success btn-sm px-4">Back to List</a>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Import Navbar -->
<script>
    fetch("../navbar.html")
        .then((response) => response.text())
        .then((data) => {
            document.getElementById("navbar-container").innerHTML = data;
        })
        .catch((error) => console.error("Error loading navbar:", error));
</script>

<!-- Optional: Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
