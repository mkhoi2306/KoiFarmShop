@page
@model KoiFarmShop.WebApp.Pages.Customers.ViewCartModel
@{
    ViewData["Title"] = "Your Cart";
}

<h2 class="my-4 text-center">Your Shopping Cart</h2>

@if (Model.cart.Items.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <div class="container">
        <div class="row">
            @foreach (var item in Model.cart.Items)
            {
                <div class="col-md-3 mb-4">
                    <div class="card product-card">
                        <img src="https://via.placeholder.com/200" class="card-img-top" alt="@item.KoiId" style="height: 200px;" />
                        <div class="card-body">
                            <h5 class="card-title">@item.KoiId</h5>
                            <p class="card-text">Price: @item.price?.ToString("C")</p>
                        @*    <p class="card-text">Total: @item.TotalAmount.ToString("C")</p>*@

                            <form method="post" asp-page-handler="UpdateCart">
                                <input type="hidden" name="productId" value="@item.KoiId" />
                                <div class="input-group mb-2">
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" />
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </form>

                            <form method="post" asp-page-handler="RemoveItem">
                                <input type="hidden" name="productId" value="@item.KoiId" />
                                <button type="submit" class="btn btn-danger w-100">Remove</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-end">
            <h4>Total Amount: @*@Model.Price.ToString("C")*@</h4>
            <a href="/Checkout" class="btn btn-success mt-3">Proceed to Checkout</a>
        </div>
    </div>
}